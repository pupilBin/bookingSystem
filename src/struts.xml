<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.i18n.encoding" value="UTF-8"></constant>
    <package name="regist" namespace="/regist" extends="struts-default">
        <interceptors>
            <interceptor name="judgeType" class="interceptor.judgeType"></interceptor>
            <interceptor-stack name="judge">
                <interceptor-ref name="judgeType"></interceptor-ref>
                <interceptor-ref name="defaultStack"></interceptor-ref>
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="judge"></default-interceptor-ref>
        <action name="registStudent" class="actions.student">
            <result name="success">/index.html</result>
            <result name="teacher" type="chain">registTeacher</result>
            <result name="input">/login.html</result>
        </action>
        <action name="registTeacher" class="actions.teacher">
            <result name="input">/login.html</result>
            <result name="teacher">/index.html</result>
        </action>
    </package>
